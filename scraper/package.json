{
  "name": "scraper",
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "NODE_OPTIONS=--experimental-specifier-resolution=node tsx watch src/index.ts",
    "build": "tsc",
    "start": "node --experimental-specifier-resolution=node dist/index.js",
    "task:categories": "NODE_OPTIONS=--experimental-specifier-resolution=node tsx src/tasks/run-category-scraper.ts",
    "task:locations": "NODE_OPTIONS=--experimental-specifier-resolution=node tsx src/tasks/run-location-scraper.ts",
    "task:jobs": "NODE_OPTIONS=--experimental-specifier-resolution=node tsx src/tasks/run-jobs-scraper.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/dotenv": "^6.1.1",
    "@types/node": "^24.9.1",
    "@types/pg": "^8.15.5",
    "@types/xml2js": "^0.4.14",
    "@vitest/ui": "^4.0.4",
    "nock": "^14.0.10",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.1.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^4.0.4"
  },
  "dependencies": {
    "@repo/database": "*",
    "@repo/logger": "*",
    "axios": "^1.12.2",
    "cheerio": "^1.1.0",
    "dotenv": "^17.2.2",
    "pg": "^8.16.3",
    "pino": "^9.11.0",
    "rss-parser": "^3.13.0"
  }
}
