    "pino-pretty": "^13.1.1",
    "prisma": "^6.16.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "axios": "^1.12.2",
    "cheerio": "^1.1.0",
    "dotenv": "^17.2.2",
    "pg": "^8.16.3",
    "pino": "^9.11.0"
  }
