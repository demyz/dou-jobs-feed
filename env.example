# =============================================================================
# DOU Jobs Scraper - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in the values
# For development: docker/dev/ uses sensible defaults for local setup
# For production: all values must be set explicitly
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Database Configuration
# -----------------------------------------------------------------------------

# Full database connection string (required for application services)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# Example: postgresql://postgres:mypassword@postgres:5432/dou_jobs?schema=public
# IMPORTANT: Use 'postgres' as hostname (Docker service name), not 'localhost'!
# For Coolify: Use 'postgres' (service name) as the hostname
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/dou_jobs?schema=public

# Individual PostgreSQL settings (used by postgres container)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=dou_jobs
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# Telegram Bot Configuration
# -----------------------------------------------------------------------------

# Telegram Bot Token from @BotFather (required)
# Get your token at: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# -----------------------------------------------------------------------------
# API Server Configuration
# -----------------------------------------------------------------------------

# Port for Express API server (serves bot Web App and API endpoints)
API_PORT=3000

# Public URL for the Web App (required for Telegram Web App)
# - Development: Use ngrok or similar tunnel (https://your-domain.ngrok.io)
# - Production: Your actual domain (https://yourdomain.com)
WEBAPP_URL=https://yourdomain.com

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------

# Application environment: development | production
NODE_ENV=production

# -----------------------------------------------------------------------------
# Optional: Logging Configuration
# -----------------------------------------------------------------------------

# Log level: trace | debug | info | warn | error | fatal
# LOG_LEVEL=info

# Pretty logging for development (set to false for production JSON logs)
# LOG_PRETTY=false

